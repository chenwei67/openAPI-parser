{
  "swagger": "2.0",
  "info": {
    "title": "clusterman",
    "version": "1.0.0",
    "description": "集群管理API"
  },
  "basePath": "/xos/v1/server",
  "paths": {
    "/clusterman/storage/pool/{cluster_id}": {
      "post": {
        "summary": "创建存储池",
        "description": "在指定集群中创建新的存储池",
        "parameters": [
          {
            "name": "cluster_id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "集群ID"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/StoragePoolReq"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "创建成功",
            "schema": {
              "$ref": "#/definitions/StoragePoolResponse"
            }
          }
        }
      }
    },
    "/clusterman/nodes": {
      "get": {
        "summary": "获取节点列表",
        "parameters": [
          {
            "name": "start_time",
            "in": "query",
            "type": "string",
            "format": "date-time",
            "description": "查询开始时间"
          },
          {
            "name": "end_time",
            "in": "query",
            "type": "string",
            "format": "date-time",
            "description": "查询结束时间"
          }
        ],
        "responses": {
          "200": {
            "description": "成功",
            "schema": {
              "$ref": "#/definitions/NodeListResponse"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "StoragePoolReq": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "存储池名称"
        },
        "block": {
          "$ref": "#/definitions/Block"
        }
      }
    },
    "Block": {
      "type": "object",
      "properties": {
        "size": {
          "type": "integer",
          "description": "块大小"
        },
        "last_check_time": {
          "type": "string",
          "format": "date-time",
          "description": "上次检查时间"
        },
        "disk_info": {
          "type": "string",
          "description": "从宿主机获取的磁盘信息"
        }
      }
    },
    "StoragePoolResponse": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "存储池ID"
        },
        "status": {
          "type": "string",
          "description": "状态"
        },
        "creation_time": {
          "type": "string",
          "format": "date-time",
          "description": "创建时间"
        }
      }
    },
    "NodeListResponse": {
      "type": "object",
      "properties": {
        "nodes": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Node"
          }
        },
        "query_timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "查询时间戳"
        }
      }
    },
    "Node": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "节点ID"
        },
        "name": {
          "type": "string",
          "description": "节点名称"
        },
        "last_heartbeat_time": {
          "type": "string",
          "format": "date-time",
          "description": "最后心跳时间"
        }
      }
    }
  }
}